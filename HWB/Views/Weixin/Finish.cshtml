<script type="text/javascript">
    (function (doc, win) {
        var docEl = doc.documentElement,
            resizeEvt = 'orientationchange' in window ? 'orientationchange' : 'resize',
            recalc = function () {
                var clientWidth = docEl.clientWidth;
                if (!clientWidth) return;
                docEl.style.fontSize = (clientWidth / 27) + 'px';
            };
        if (!doc.addEventListener) return;
        win.addEventListener(resizeEvt, recalc, false);
        doc.addEventListener('DOMContentLoaded', recalc, false);
    })(document, window);

    document.getElementById("area").innerHTML = "@Model.Area";
    document.getElementById("name").innerHTML = "@Model.Name";
    document.getElementById("score").innerHTML = "@Model.Score";
    document.getElementById("finalresult").innerHTML = @Model.Score*50;
</script>